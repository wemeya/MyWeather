<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffcd2626"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_city"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:src="@drawable/title_city" />

        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@+id/title_city"
            android:background="#A71717" />

        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dip"
            android:text="北京天气"
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />

        <FrameLayout
            android:id="@+id/update_frame"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip">
            <ProgressBar
                android:id="@+id/title_update_progress"
                style="@style/title_update_progressbar_style"
                android:visibility="gone"
                android:layout_width="45.0dip"
                android:layout_height="45.0dip" />
            <ImageView
                android:id="@+id/title_update_btn"
                android:layout_width="45.0dip"
                android:layout_height="45.0dip"
                android:gravity="center"
                android:visibility="visible"
                android:src="@drawable/title_update" />



        </FrameLayout>
        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/update_frame"
            android:src="@drawable/title_share" />

        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city" />
        <Button
            android:id="@+id/btn_title_read"
            android:background="#ffcd2626"
            android:text="朗读"
            android:layout_toLeftOf="@id/title_location"
            android:layout_width="wrap_content"
            android:layout_height="45.0dip" />


</RelativeLayout>
